<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFrameworks>net6.0;netstandard2.0</TargetFrameworks>
		<ImplicitUsings>disable</ImplicitUsings>
		<GeneratePackageOnBuild>False</GeneratePackageOnBuild>
		<PackageTags>Settings;Options;json</PackageTags>
		<AssemblyVersion>1.3.2</AssemblyVersion>
		<FileVersion>$(AssemblyVersion)</FileVersion>
		<VersionPrefix>$(AssemblyVersion)</VersionPrefix>
		<Authors>skint007</Authors>
		<Description>A simple app settings class that allows for easy json app settings management.
Checkout github for some examples.</Description>
		<PackageProjectUrl>https://github.com/skint007/ApplicationOptions</PackageProjectUrl>
		<PackageIcon>options-64.png</PackageIcon>
		<RepositoryUrl>https://github.com/skint007/ApplicationOptions</RepositoryUrl>
	</PropertyGroup>
	<ItemGroup>
	  <None Include="..\options-64.png">
	    <Pack>True</Pack>
	    <PackagePath>\</PackagePath>
	  </None>
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
	</ItemGroup>
</Project>
